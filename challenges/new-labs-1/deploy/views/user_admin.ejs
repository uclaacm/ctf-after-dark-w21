<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>
  <body>
    <!--NAV BAR-->
    <div id="mySidenav" class="sidenav">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"
        >&times;</a
      >

      <form action="/info" class="navbutton" method="get">
        <button type="submit">Info</button>
      </form>

      <form action="/blog" class="navbutton" method="get">
        <button type="submit">Blog</button>
      </form>

      <form action="/user_home" class="navbutton" method="get">
        <button type="submit">User</button>
      </form>

      <form action="/index_check" class="navbutton" method="get">
        <button type="submit">Login</button>
      </form>

      <h4>CY_LABS</h4>
      <br /><br />
    </div>

    <script>
      function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
        document.getElementById("main").style.marginLeft = "250px";
      }

      function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.getElementById("main").style.marginLeft = "0";
      }
    </script>

    <span onclick="openNav()">
      <div class="vl">
        <br />
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>
    </span>

    <div id="main">
      <header>
        <h5>LOCKDOWN Protocol Activated</h5>
        CY_LABS <br />
        <br />
        - User Profile -
      </header>
      <br />
      <h1>
        Welcome

        <script>
          cookieValue = document.cookie
            .split("; ")
            .find((row) => row.startsWith("user"))
            .split("=")[1];

          var value = decodeURI(cookieValue);

          document.write(value);
        </script>
      </h1>
      <br />
      <div class="nothing" style="align-content: center;">
        <form action="/view_user" method="post">
          <% if(data.info) { %>
          <div class="notes">
            <% for (var i = 0; i < data.info.length; i++) { %> <% for (let [key,
            value] of Object.entries(data.info.result[i])) { %> <%= key %> :
            <br />
            <%= value %> <br />
            <br />
            <% } %> <% } %>
          </div>
          <% } else { %> <% if(data.notes && data.protection == "unprotected") { %>
          <div class="notes">
            MY NOTES: <br /><br />
            <%= data.notes %>
          </div>
          <br />
          <% } else { %>
          <h1>
            <div class="login">
            <i
              >(Please relogin or verify your password below to see your notes
              and other account information.)
            </i>
            </div>
          </h1>
          <br />
          <% } %>
          <div class ="login">
            <div class="container">

          <label >
            <div style="text-align: left;">
            <b>Verify Password</b>
          
          </label>
            <input
              type="text"
              placeholder="Enter Password"
              name="password"
              required
            />
          </div>
            <button id="button1" type="submit">
            View My Information</div>
            </button>
          </div>

          <input type="hidden" name="debug" value="0" />

          <% if(data.authorization == "unauthorized") { %>
          <div class="unauthorized">Invalid Password</div>
          <% } else if (data.authorization == "error") { %>
          <div class="error">An error has occured</div>
          <%} %> <% } %>
        </form>

        <form action="/logout" method="get">
          <button class="button1" type="submit">Log Out</button>
        </form>
        <br /><br />
      </div>
      </div>
      <img
        src="media/pikaaa.gif"
        alt="sorry no flags or gifs here :("
        class="center"
      />
    </div>
  </div>
  </body>
</html>
