<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>

  <body>
    <div id="mySidenav" class="sidenav">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"
        >&times;</a
      >

      <form action="/info" class="navbutton" method="get">
        <button type="submit">Info</button>
      </form>

      <form action="/blog" class="navbutton" method="get">
        <button type="submit">Blog</button>
      </form>

      <form action="/user_home" class="navbutton" method="get">
        <button type="submit">User</button>
      </form>

      <form action="/index_check" class="navbutton" method="get">
        <button type="submit">Login</button>
      </form>

      <h4>CY_LABS</h4>
    </div>

    <script>
      function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
        document.getElementById("main").style.marginLeft = "250px";
      }

      function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.getElementById("main").style.marginLeft = "0";
      }
    </script>

    <span onclick="openNav()">
      <div class="vl">
        <br />
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>
    </span>

    <div id="main">
      <h5>LOCKDOWN Protocol Activated</h5>
      <header>
        CY_LABS
      </header>

      <form action="/" method="get"></form>
      <form action="/login" method="post">
        <div class="nothing">
          <div class="container">
            <label>
              <b>
                <div style="text-align: left">
                Username</b>
            </div>
            </label>
            <input
              type="text"
              placeholder="Enter Username"
              name="username"
              required
            />

            <label>
              <br /><br />
              <div style="text-align: left">
                <b>Password</b>
              </div></label>
            <input
              type="password"
              placeholder="Enter Password"
              name="password"
              required
            />
            <br /><br />
            <button class="button1" type="submit">Login</button>
          </div>
        </div>
        <% if(data.authorization == "unauthorized") { %>
        <div class="unauthorized">INVALID!!!!!!</div>
        <% } else if (data.authorization == "error") { %>
        <div class="error">An error has occured</div>
        <%} %>
      </form>
      <br />
    </div>
  </body>
</html>
